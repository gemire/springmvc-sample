<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

	<!-- Generated by eclipse Hibernate Tools.                   -->
<hibernate-configuration>

	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/classiccars</property>
		<property name="hibernate.connection.username">root</property>
		<!--
			this is required
			http://www.lalitmehta.com/home/2006/03/12/hibernate-gives-no-currentsessioncontext-configured-error/
		-->
		<property name="current_session_context_class">thread</property>
		<property name="hibernate.format_sql">true</property>
		<property name="show_sql">true</property>
		<mapping resource="ApplicationGroups.hbm.xml" />
		<mapping resource="Applications.hbm.xml" />
		<mapping resource="Groups.hbm.xml" />
		<mapping resource="Users.hbm.xml" />
		<mapping resource="GroupAssignments.hbm.xml" />

	</session-factory>



</hibernate-configuration>
