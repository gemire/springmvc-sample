<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
    <property name="hibernate.connection.url">jdbc:derby://localhost:1527/sandbox</property>
    <property name="hibernate.connection.username">sandbox</property>
    <property name="hibernate.connection.password">sandbox</property>
    <property name="show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping  class="com.dhenton9000.hibernate.mapping.demo.one.Choice"/>
    <mapping  class="com.dhenton9000.hibernate.mapping.demo.one.Question"/>
    
  </session-factory>
</hibernate-configuration>
