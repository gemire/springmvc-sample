<?xml version="1.0"?>

<project name="cxf wsdl2java" default="cxfWSDLToJava" basedir="./../../..">
	<property name="cxf.home" location="/home/dhenton/Downloads/apache-cxf-2.6.1" />

	<path id="cxf.classpath">
		<fileset dir="${cxf.home}/lib">
			<include name="*.jar" />
		</fileset>
	</path>
 
	<target name="WSDLToJava">
		<java classname="org.apache.cxf.tools.wsdlto.WSDLToJava" fork="true">
			<arg value="-p" />
			<arg value="com.dhenton9000.registration.bindings" />
			<arg value="-d" />
			<arg value="src/main/java" />
			<arg value="-b" />
			<arg value="src/main/resources/binding.xml" />
			<arg value="-verbose" />
			<arg value="-frontend" />
			<arg value="jaxws21" />
                        <arg value="-impl" />
			<arg value="src/main/resources/RegistrationService.wsdl" />
			<classpath>
				<path refid="cxf.classpath" />
			</classpath>
		</java>
	</target>
    
